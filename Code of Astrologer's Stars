n = int(input("How many rows you want to print:"))
n1 = int(input("Type 1 Or 0:"))
hjk = bool(n1)
if hjk==True:
    for i in range(1,n+1):
        for j in range(1,i+1):
            print("*",end=" ")
        print("")
elif hjk==False:
    for i in range(n,0,-1):
        for j in range(1,i+1):
            print("*",end=" ")
        print("")    
